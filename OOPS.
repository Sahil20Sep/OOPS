class dsu{

    public:

    dsu(){
        cout << " sahil " << endl;
    }

    int c;

    dsu(int c){
        cout << "this " << this << endl;
        this -> c = c;
    }
    
    public:
    int a;

    private:
    int b;

    public:
    int getb(){
        return b;
    }
    void setb(int n){
        b = n;
    }
};
 

class dsu{

    public:

    dsu(){
        cout << " sahil " << endl;
    }

    int c;

    dsu(int c){
        cout << "this " << this << endl;
        this -> c = c;
    }

    int d, e;

    dsu(int d, int e){
        this -> d = d;
        this -> e = e;
    }
    
    public:
    int a;

    private:
    int b;

    public:
    int getb(){
        return b;
    }
    void setb(int n){
        b = n;
    }
};
 
//------------------------------------code------------------------------------//
 
int main(){
    ios::sync_with_stdio(false);
    cin.tie(0);    
    ll T = 1;
    // cin >> T;
    while(T--){

        dsu a;

        dsu obj(10);

        cout << (&obj) << endl;

        dsu *b = new dsu(20);

        dsu temp(10, 10);

        cout << temp.d << " "  << temp.e << endl;        
        sahil:; 
    }
    return 0;
}

